{
  "name": "react-progressive-table",
  "description": "Utility component for rendering table rows progressively",
  "version": "1.0.0",
  "author": "Sam Boylett <sam.boylett@piksel.com>",
  "main": "dist/index.js",
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "webpack",
    "lint": "eslint lib && eslint test/spec",
    "flow": "./node_modules/.bin/flow",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:mutate": "NODE_ENV=test stryker run",
    "codecov": "codecov"
  },
  "jest": {
    "testMatch": [
      "**/test/spec/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/.stryker-tmp/"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "lines": 100,
        "functions": 100
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pikselpalette/react-progressive-table"
  },
  "license": "Apache-2.0",
  "peerDependencies": {
    "react": "^16.4.0",
    "react-dom": "^16.4.0"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "always"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-add-module-exports": "1.0.2",
    "babel-plugin-istanbul": "^5.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "codecov": "^3.0.4",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-flowtype": "^3.9.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-react": "^7.9.1",
    "flow-babel-webpack-plugin": "^1.1.1",
    "flow-bin": "^0.98.1",
    "ink-docstrap": "^1.3.2",
    "jest": "^24.8.0",
    "jest-enzyme": "^7.0.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "semantic-ui-react": "^0.87.1",
    "stryker": "^0.35.1",
    "stryker-api": "^0.24.1",
    "stryker-babel-transpiler": "^0.10.1",
    "stryker-html-reporter": "^0.18.1",
    "stryker-javascript-mutator": "^0.14.1",
    "stryker-jest-runner": "^1.4.1",
    "webpack": "^4.8.1",
    "webpack-cli": "^3.3.2"
  },
  "dependencies": {
    "eslint-config-prettier": "^4.3.0"
  }
}
